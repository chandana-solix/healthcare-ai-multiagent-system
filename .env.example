# Environment Variables Example
# Copy this file to .env and update with your values

# LLM Provider - Choose one:
# - ollama (free, local, recommended)
# - huggingface (free tier with limits)
# - gemini (free tier from Google)
# - openai (paid)
LLM_PROVIDER=ollama

# Ollama Configuration (FREE - runs locally)
OLLAMA_MODEL=mistral
OLLAMA_BASE_URL=http://localhost:11434

# Alternative: OpenAI Configuration (PAID)
# OPENAI_API_KEY=your-openai-api-key-here

# Alternative: Hugging Face (FREE with limits)
# HUGGINGFACE_API_TOKEN=your-huggingface-token-here

# Alternative: Google Gemini (FREE tier)
# GEMINI_API_KEY=your-gemini-api-key-here

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://healthcare:healthcare123@localhost:5432/healthcare_ai

# Redis
REDIS_URL=redis://localhost:6379

# Application Settings
DEBUG=false
PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost"]

# Frontend
VITE_API_URL=http://localhost:8000